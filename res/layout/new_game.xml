<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent">
<ScrollView
	android:layout_width="fill_parent"
  	android:layout_height="fill_parent">
<LinearLayout
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:weightSum="1" 
  	android:orientation="vertical">
<TextView
	android:textSize="24dp" 
	android:layout_marginTop="20dp"
	android:layout_height="wrap_content"
	android:textColor="#FFFFFFFF"
	android:textStyle="bold"
	android:gravity="center"
	android:layout_width="fill_parent" 
	android:text="Elemental Tower Defense" />
        
<TextView 
	android:gravity="center" 
	android:textSize="20dp"
	android:layout_marginTop="10dp"
	android:layout_height="wrap_content"
	android:textColor="#FFFFFFFF"
	android:textStyle="bold"
	android:layout_width="fill_parent" 
	android:text="Game Difficulty"/>
	
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:weightSum="1">
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Easy"
			android:textColor="#00CC00"
			android:textSize="20dp"
    		android:gravity="center|bottom"
    		android:layout_weight=".20"/>
    		
		<SeekBar
			android:id="@+id/Difficulty"
			android:layout_height="wrap_content"
			android:layout_gravity="center|bottom"
			android:layout_width="0dp"
			android:max="4"
			android:progress="2"
			android:layout_weight=".60"/>
			
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Hard"
			android:textColor="#FF0000"
			android:textSize="20dp"
    		android:gravity="center|bottom"
    		android:layout_weight=".20"/>
    
	</LinearLayout>
	
<TextView
	android:id="@+id/seekbarValue"
	android:gravity="center" 
	android:textSize="10dp" 
	android:layout_marginTop="5dp"
	android:layout_height="wrap_content"
	android:textColor="#FFFFFFFF"
	android:textStyle="bold"
	android:layout_width="fill_parent" 
	android:text="Enemies take 20% less damage"/>	
	
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:weightSum="1"
		android:layout_marginTop="10dp">
		
		<LinearLayout
			android:orientation="vertical"
			android:layout_height="wrap_content"
			android:layout_width="0dp" 
			android:layout_marginLeft="10dp"
			android:layout_weight=".8">
		
			<TextView
				android:text="Random Elements"
				android:textSize="20dp"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"/>
				
			<TextView
				android:id="@+id/ele_order"
				android:text="Player chooses elements to appear"
				android:textSize="10dp"
				android:layout_marginTop="3dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</LinearLayout>
    		
    	<CheckBox  
    		android:id="@+id/option1"
    		android:layout_width="0dp"  
    		android:layout_weight=".2" 
    		android:layout_height="wrap_content" 
    		android:gravity="right"/>
    		
	</LinearLayout>
	
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:weightSum="1"
		android:layout_marginTop="10dp">
		
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="0dp" 
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_weight=".8">
		
			<TextView
				android:text="Chaos Mode"
				android:textSize="20dp"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"/>
				
			<TextView
				android:id="@+id/chaos_mode"
				android:text="Normal wave order"
				android:textSize="10dp"
				android:layout_marginTop="3dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</LinearLayout>

    	<CheckBox  
    		android:id="@+id/option2"
    		android:layout_width="0dp" 
    		android:layout_weight=".2" 
    		android:layout_height="wrap_content" 
    		android:layout_gravity="right"/>
    		
	</LinearLayout>
	
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:weightSum="1"
		android:layout_marginTop="10dp">
		
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="0dp" 
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_weight=".8">
		
			<TextView
				android:text="Continuous"
				android:textSize="20dp"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"/>
				
			<TextView
				android:id="@+id/continuous"
				android:text="Normal time between waves"
				android:textSize="10dp"
				android:layout_marginTop="3dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</LinearLayout>

    	<CheckBox  
    		android:id="@+id/option3"
    		android:layout_width="0dp" 
    		android:layout_weight=".2" 
    		android:layout_height="wrap_content" 
    		android:layout_gravity="right"/>    	
    			
	</LinearLayout>
	
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:weightSum="1"
		android:layout_marginTop="10dp">
		
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="0dp" 
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_weight=".8">
		
			<TextView
				android:text="Option 4"
				android:textSize="20dp"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"/>
				
			<TextView
				android:text="describe option 4"
				android:textSize="10dp"
				android:layout_marginTop="3dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</LinearLayout>

    	<CheckBox  
    		android:id="@+id/option4"
    		android:layout_width="0dp" 
    		android:layout_weight=".2" 
    		android:layout_height="wrap_content" 
    		android:layout_gravity="right"/>
    		
	</LinearLayout>

<Button
	android:id="@+id/Start_Game"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:layout_marginTop="20dp"
	android:textSize="25dp"
	android:gravity="center"
	android:textStyle="bold"
	android:text="Start Game!"/>
	
<LinearLayout
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:layout_marginTop="3dp"
	android:weightSum="1">
	
	<Button
		android:id="@+id/Go_back_from_newGame"
		android:layout_height="wrap_content"
		android:layout_width="0dp" 
		android:layout_weight=".5"
		android:textSize="12dp"
		android:gravity="center"
		android:textStyle="bold"
		android:text="Go Back"/>
		
	<Button
		android:id="@+id/Add_Options"
		android:layout_height="wrap_content"
		android:layout_width="0dp" 
		android:layout_weight=".5"
		android:textSize="12dp"
		android:gravity="center"
		android:textStyle="bold"
		android:text="Additional Options"/>
	

		
</LinearLayout>
	
</LinearLayout>
</ScrollView>
</LinearLayout>